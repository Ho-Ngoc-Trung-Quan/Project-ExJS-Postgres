<div class="container my-4">
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <div class="card border-0 shadow-sm p-3">
        <div class="d-flex align-items-center">
          <!-- Image Section -->
          <a href="/products/<%= product.id %>">
            <img
              class="img-fluid rounded"
              src="/img/menu-<%= product.id %>.jpg"
              alt="<%= product.name %>"
              width="200"
              height="200"
            />
          </a>
          <!-- Product Details Section -->
          <div class="ms-4 w-100">
            <h5 class="d-flex justify-content-between align-items-center border-bottom pb-2 mb-2 fw-bold">
              <a class="text-dark text-decoration-none" href="/products/<%= product.id %>"><%= product.name %></a>
              <span class="text-primary">$<%= product.price %></span>
            </h5>
            <p class="text-muted mb-2" style="font-size: 0.9rem;">Description: <%= product.description %></p>
            <button class="btn btn-outline-primary btn-sm mt-2" onclick="addToCart()">
              <img src="https://www.svgrepo.com/show/488039/add-to-cart.svg" width="20" height="20" class="me-2" />
              Add to Cart
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Recommendation Section -->
  <div class="row mt-4">
    <div class="col-lg-12">
      <h5 class="fw-bold">Other Food Like This</h5>
      <div class="d-flex overflow-auto">
        <% otherFood.forEach(function(food) { %>
          <div class="card border-0 shadow-sm me-3" style="width: 200px;">
            <a href="/products/<%= food.id %>">
              <img
                class="card-img-top"
                src="/img/menu-<%= food.id %>.jpg"
                alt="<%= food.name %>"
              />
            </a>
            <div class="card-body">
              <h6 class="card-title"><%= food.name %></h6>
              <p class="card-text text-primary">$<%= food.price %></p>
            </div>
          </div>
        <% }); %>
      </div>
    </div>
  </div>
</div>
