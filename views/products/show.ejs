<div class="container my-4">
  <div class="row mb-5 justify-content-center">
    <div class="col-lg-10">
        <div class="d-flex align-items-center shadow-sm p-3">
          <!-- Image Section -->
          <a href="/products/<%= product.id %>">
            <img
              class="img-fluid rounded"
              src="/img/menu-<%= product.id % 8 + 1 %>.jpg"
              alt="<%= product.name %>"
              width="200"
              height="200"
            />
          </a>
          <!-- Product Details Section -->
          <div class="ms-4 w-100">
            <h5 class="d-flex justify-content-between align-items-center border-bottom pb-2 mb-2 fw-bold">
              <a class="text-dark text-decoration-none" href="/products/<%= product.id %>"><%= product.name %></a>
              <span class="text-primary">$<%= product.price %></span>
            </h5>
            <p class="text-muted mb-2" style="font-size: 0.9rem;">Description: <%= product.description %></p>
            <button class="btn btn-outline-primary btn-sm mt-2" onclick="addToCart()">
              <img src="/img/add_to_cart.png" width="20" height="20" class="me-2" />
              Add to Cart
            </button>
          </div>
        </div>
    </div>  
  </div>
  <!-- Recommendation Section -->
  <div class="row g-3 wow fadeInUp">
    <h4>People also like...</h4>
    <% recommendations.forEach(product => { %>
      <div class="col-lg-6">
        <div class="d-flex align-items-center me-4">
          <a href="/products/<%= product.id %>">
            <img class="flex-shrink-0 img-fluid rounded" src="/img/food/menu-<%= product.id % 8 + 1 %>.jpg" alt="" style="width: 90px;">
          </a>
          <div class="w-100 d-flex flex-column text-start ps-2">
            <h5 class="d-flex justify-content-between border-bottom nunito-custom fw-bold">
                <span><a href="/products/<%= product.id %>"><%= product.name %></a></span>
                <span class="text-primary">$<%= product.price %></span>
            </h5>
            <div class="row g-3">
              <small class="col-10 playwrite-gb-s-custom"><%= product.description %></small>
              <button class="btn btn-primary col-2 pb-1 pt-0" onclick="addToCart()">
                <img src="/img/add_to_cart.png" width="20" height="20" />
              </button>
            </div>
          </div>
        </div>
      </div>
    <% }); %>
  </div>
</div>
