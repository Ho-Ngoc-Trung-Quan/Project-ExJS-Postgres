<!--Form Filter Begin-->
<form method="GET" action="/products" class="container mb-5">
  <div class="row g-3 align-items-center">
    <!-- Search Field -->
    <div class="col-md-3">
      <input type="text" name="search" class="form-control" placeholder="Search by name..."/>
    </div>
    <!-- Description Field -->
    <div class="col-md-3">
      <input type="text" name="description" class="form-control" placeholder="Search by description..."/>
    </div>
    <!-- Min Price Field -->
    <div class="col-md-2">
      <input type="number" name="minPrice" class="form-control" placeholder="Min Price"/>
    </div>
    <!-- Max Price Field -->
    <div class="col-md-2">
      <input type="number" name="maxPrice" class="form-control" placeholder="Max Price"/>
    </div>
    <!-- Submit Button -->
    <div class="col-md-2">
      <button type="submit" class="btn btn-primary w-100">Filter</button>
    </div>
  </div>
</form>
<!--Form Filter End-->

<!-- List Begin -->
<div class="container">
  <div class="row g-4">
    <% products.forEach(product => { %>
      <div class="col-lg-6">
        <div class="d-flex align-items-center">
          <a href="/products/<%= product.id %>">
            <img class="flex-shrink-0 img-fluid rounded" src="/img/menu-<%= product.id %>.jpg" alt="" style="width: 80px;">
          </a>
          <div class="w-100 d-flex flex-column text-start ps-4">
            <h5 class="d-flex justify-content-between border-bottom pb-2 nunito-custom fw-bold">
                <span><a href="/products/<%= product.id %>"><%= product.name %></a></span>
                <span class="text-primary">$<%= product.price %></span>
            </h5>
            <div class="row g-3">
              <small class="col-10 playwrite-gb-s-custom"><%= product.description %></small>
            </div>
          </div>
          <button class="btn btn-primary m-2" onclick="addToCart()">
            <img src="https://www.svgrepo.com/show/488039/add-to-cart.svg" width="32" height="32" />
          </button>
        </div>
      </div>
    <% }); %>
</div>
<!-- List End -->